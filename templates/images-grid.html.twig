{% extends 'partials/base.html.twig' %}
{% block content %}
  <div class="grid-wrapper">
    <ul class="grid-container">
    {% for item in page.collection %}
      {% if loop.index % 3 == 0 %}
        <li class="item item--spacer"></li>
      {% endif %}
      <li class="item {% if item.header.metadata.size %}item--{{ item.header.metadata.size }}{% endif %}">
        <a href="{{ item.url }}">
          {% set first_image = item.media.images|first %}
          {{ first_image.html }}
          <div class="item__info">
            <h2>{{ item.header.metadata.title }}</h2>
            <p>{{ item.header.metadata.description }}</p>
          </div>
        </a>
      </li>
    {% endfor %}
    </ul>
  </div>
{% endblock %}